<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@android:color/black"
    android:layout_margin="10dp"
    android:gravity="center"
    android:id="@+id/food_item_list_relativeLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/fill_round">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/food_item_img"
            android:background="@drawable/white_border"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/food_item_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="15dp"
                android:text="Item Publisher"
                android:gravity="center"
                android:id="@+id/food_item_publisher_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic |bold"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12dp"
                android:text="Rank: 786"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/food_item_rank"/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>